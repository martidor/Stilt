<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/lydbelastningsView"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="8dp"
        android:weightSum="1">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ligger i lomma"
            android:id="@+id/liggerILommaSwitch"
            android:checked="false"
            android:layout_marginRight="50dp"
            android:layout_weight="0.09" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hørselvern"
            android:id="@+id/hørselvernSwitch"
            android:checked="false"
            android:layout_weight="0.10" />
    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:id="@+id/graphLyd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:padding="0dp" />

    <!--Ikke i bruk-->
    <!--<com.jjoe64.graphview.GraphView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="221dp"-->
        <!--android:id="@+id/graphLyd2"/>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:text="10 min"
            android:id="@+id/button"
            android:padding="0dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:text="30 min"
            android:id="@+id/button2"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:padding="0dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:text="1 time"
            android:id="@+id/button3"
            android:padding="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Average: "
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="50 dB"
            android:id="@+id/textView2"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Peak: "
            android:id="@+id/peakText"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="100 dB"
            android:id="@+id/textView3" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="0.57">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fun fact hahah hahahhah ahhahahha hahhahahh ahahhahah hahahhaha hhahahhaha hhahahha hahhahahh ahahhahah hahahahah ahhaha ahaha ahah ahaa ahaaha haaha hahahha"
            android:id="@+id/funfactText"
            android:layout_gravity="left|top"
            android:background="@drawable/layout_border"
            android:padding="8dp" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start måling"
            android:id="@+id/startMålingButton"
            android:layout_marginStart="20dp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView"
            android:src="@drawable/settingsicon"
            android:layout_marginLeft="150dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</LinearLayout>